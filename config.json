{
  "output": "eDP-1",
  "layer": "top",
  "position": "top",
  "spacing": 5,
  "height": 34,
  "margin-top": 10,
  "margin-bottom": 0,
  "margin-left": 20,
  "margin-right": 20,
  "modules-left": ["hyprland/workspaces", "cpu", "memory", "custom/weather"],
  "modules-center": ["clock"],
  "modules-right": [
    "tray",
    "network",
    "bluetooth",
    "pulseaudio",
    "backlight",
    "battery",
    "custom/nixlogo",
    "custom/power"
  ],
  "wlr/taskbar": {
    "format": "{icon}",
    "on-click": "activate",
    "on-click-right": "fullscreen",
    "icon-theme": "WhiteSur",
    "icon-size": 25,
    "tooltip-format": "{title}"
  },
  "hyprland/workspaces": {
    "disable-scroll": true,
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "default": "",
      "active": ""
    },
    "persistent_workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": []
    }
  },
  "temperature": {
    "interval": "1",
    "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
    "critical-threshold": 74,
    "format-critical": "  {temperatureC}°C",
    "format": "{icon}  {temperatureC}°C",
    "format-icons": ["", "", ""],
    "max-length": 7,
    "min-length": 7
  },
  "cpu": {
    "interval": 1,
    "format": " {}%",
    "max-length": 10
  },
  "memory": {
    "interval": 1,
    "format": "󰍛 {}%",
    "exec": "free -h | awk '/Mem:/{printf $3}'",
    "max-length": 10
  },
  "tray": {
    "spacing": 15
  },
  "clock": {
    "tooltip-format": "<tt>{calendar}</tt>",
    "format-alt": "  {:%a, %d %b %Y}",
    "format": "  {:%m/%d %I:%M %p}"
  },
  "network": {
    "format-wifi": "{icon}",
    "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
    "format-ethernet": "󰈀",
    "tooltip-format-wifi": "{icon} {essid}\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "tooltip-format-ethernet": "󰈀  {ifname}\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "on-click": "nm-connection-editor",
    "interval": 5,
    "nospacing": 1
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "<span color='#b4befe'>{icon}</span> {percent}%",
    "format-icons": ["", "", "", "", "", "", "", "", ""]
  },
  "bluetooth": {
    "interval": 30,
    "format": "{icon}",
    "format-icons": {
      "enabled": "",
      "disabled": "󰂲"
    },
    "on-click": "blueberry"
  },
  "pulseaudio": {
    "format": "<span color='#b4befe'>{icon}</span> {volume}%",
    "format-bluetooth": "󰂰",
    "nospacing": 1,
    "tooltip-format": "Volume: {volume}%",
    "format-muted": "󰝟",
    "format-icons": {
      "headphone": "",
      "default": ["󰖀", "󰕾", ""]
    },
    "on-click": "pavucontrol",
    "scroll-step": 1
  },
  "battery": {
    "interval": 10,
    "format": "<span color='#737373'>{icon}</span> {capacity}%",
    "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "format-charging": "<span color='#b2f252'>󰂄</span> {capacity}%",
    "format-plugged": "<span color='#b2f252'>󰚥</span> MAX",
    "tooltip-format": "Profile: {}",
    "exec": "cat /sys/firmware/acpi/platform_profile",
    "on-click": "$HOME/.config/rofi/bin/profile-switch"
  },
  "custom/power": {
    "format": "󰤆",
    "tooltip": false,
    "on-click": "$HOME/.config/rofi/bin/powermenu"
  },
  "custom/weather": {
    "exec": "curl 'https://wttr.in/HongKong?format=1'",
    "interval": 3600
  },
  "custom/nixlogo": {
    "format": ""
  }
}
